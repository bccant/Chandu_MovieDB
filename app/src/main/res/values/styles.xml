<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MovieTitle" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/movieTitle</item>
        <item name="android:textAppearance">?android:titleTextAppearance</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">left|center</item>
    </style>

    <style name="MovieDetails" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/movieDetails</item>
        <item name="android:textAppearance">?android:textAppearance</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
